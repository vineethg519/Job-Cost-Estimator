<h2>Edit waterproofing primer product</h2>
<div class="content">
	
		<form method="POST" action="/estimatePartAggregate/save/<%= estimatePartAggregate._id %>">
				<div class="form-group" id=frm>
					<label for="_id">ID</label>
					<input type="number" class="form-control" id="_id" name="_id" value="<%= estimatePartAggregate._id %>" required readonly>
				</div>


                <div class="form-group">
                <label for="usesAggregate">Uses Aggregate?</label>
                <input type="checkbox" class="form-control" id="usesAggregate" name="usesAggregate" value="<%= estimatePartAggregate.isUsed %>">
                </div>

                <div class="form-group">
                <label for="aggregateTypeSelection">Aggregate Type</label>
                <div class="funkyradio">
                    <div class="funkyradio-primary">
                        <input type="radio" name="radio" id="Sand" checked/>
                        <label for="Sand">Sand</label>
                    </div>
                    <div class="funkyradio-success">
                        <input type="radio" name="radio" id="Quartz" />
                        <label for="Quartz">Quartz</label>
                    </div>
                    <div class="funkyradio-warning">
                        <input type="radio" name="radio" id="Flake" />
                        <label for="Flake">Flake</label>
                    </div>
                    <div class="funkyradio-danger">
                        <input type="radio" name="radio" id="Glass" />
                    <label for="Glass">Glass Beads</label>
                    </div>
                </div>
                </div>

                <div class="form-group">
                <label for="aggregateMaterialSelection">Aggregate Material Selection</label>
                <input type="input" class="form-control" id="aggregateMaterialSelection" name="aggregateMaterialSelection" value="<%= estimatePartAggregate.aggregateMaterialSelection %>">

                </div>
                <div class="form-group">
                <label for="coverageSqFt">Coverage Square per feet</label>
                <input type="number" class="form-control" id="coverageSqFt" name="coverageSqFt" value="<%= estimatePartAggregate.coverageSqFt %>">

                </div>
                <input type="submit" value="Save" class="btn btn-primary" />
                </div>
			
			
		</form>
		<br/>
		<form method="get" action="/waterproofingPrimer">
			<input type="submit" value="Return to list" class="btn btn-caution" />
		</form>
	</div>
</div>