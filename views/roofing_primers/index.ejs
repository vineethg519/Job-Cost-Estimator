
<% console.log(roofingPrimers.query); %>
<div class="container">
 <h2>Material roofing primer costs</h2>

<p>There are  <%= roofingPrimers.query.length %> roofing primers. <br/>
<a href="roofingPrimer/create">Add a new one.</a></p>

<table class="table" border="1">
    <thead>
      <tr>
        <th>Name</th>
        <th>Display Order</th>
        <th>Price</th>
        <th>Unit</th>
       <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% count=0; %>
<% for (var i = 0; i < roofingPrimers.query.length; i++) { %>
         <tr><% count++; %>
            <td><%=  roofingPrimers.query[i].name %></td>
            <td><%=  roofingPrimers.query[i].displayorder %></td>
            <td><%=  roofingPrimers.query[i].price %></td>
            <td><%=  roofingPrimers.query[i].unit %></td>
            <td>
							<a href="roofingPrimer/delete/<%=  count%>"> Delete </a> |
							<a href="roofingPrimer/details/<%=  count%>"> Details </a> |
							<a href="roofingPrimer/edit/<%=  count%>"> Edit </a>
						</td>
         </tr>
         <% } %>
</tbody>
</table>
</div>
