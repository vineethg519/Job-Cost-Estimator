<h2>Edit Estimate Part Flooring</h2>
<div class="content">
	<div>
		<form method="POST" action="/estimatePartFlooring/save/<%= estimatePartFlooring._id %>">

			
			<div class="form-group" id=frm>
				<label for="_id">ID</label>
				<input type="number" class="form-control" id="_id" name="_id" value="<%= estimatePartFlooring._id %>" required disabled>
			</div>

			 <div class="form-group">
					<label for="floorSystemType">Floor System Type</label>
					<select id="floorSystemType" name="floorSystemType" value="Epoxy" class="form-control selcls">
						
						<option> Epoxy</option>
						<option> Decorative Expoxy</option>
						<option> Urethane</option>
					</select>
				</div>

				<div class="form-group">
					<label for="usesUrethane">Uses Erethane ?</label>
					<input type="checkbox" class="form-control" id="usesUrethane" name="usesUrethane" <%= estimatePartFlooring.usesUrethane ? "checked" : "" %>>
				</div>

				<div id="flooringOptions">
				<div class="form-group">
					<label for="urethaneProductSelection">Urethane Product Selection (<%= flooringCoatings.query.length %>):</label>
					<select name="urethaneProductSelection" class="form-control selcls">
	 					<%  for (var i = 0; i < flooringCoatings.query.length ; i++){  %>
	 						<option value="<%= flooringCoatings.query[i].name %>"><%= flooringCoatings.query[i].name %></option>
						<%    }  %>
					</select>
				</div>
				</div>

				<div class="form-group">
					<label for="urethaneCoverageSqFt">Urethane Coverage SqFt:</label>
					<input type="number" class="form-control" id="urethaneCoverageSqFt" name="urethaneCoverageSqFt" default="100" min="80" max="200" required>
				</div>

			   <div class="form-group">
					<label for="usesEpoxy">Uses Epoxy ?</label>
					<input type="checkbox" class="form-control" id="usesEpoxy" name="usesEpoxy" <%= estimatePartFlooring.usesEpoxy ? "checked" : "" %>>
				</div>

				<div id="flooringOptions2">
				<div class="form-group">
					<label for="expoxyProductSelection">Epoxy Product Selection (<%= flooringCoatings.query.length %>):</label>
					<select name="expoxyProductSelection" class="form-control selcls">
	 					<%  for (var i = 0; i < flooringCoatings.query.length ; i++){  %>
	 						<option value="<%= flooringCoatings.query[i].name %>"><%= flooringCoatings.query[i].name %></option>
						<%    }  %>
					</select>
				</div>
				</div>

				<div class="form-group">
					<label for="expoxyCoverageSqFt">Epoxy Coverage SqFt:</label>
					<input type="number" class="form-control" id="expoxyCoverageSqFt" name="expoxyCoverageSqFt" default="100" min="100" max="400" required>
				</div>

			

			<input type="submit" value="Save" class="btn btn-primary" />
		</form>
		<br/>
		<form method="get" action="/estimatePartFlooring">
			<input type="submit" value="Return to list" class="btn btn-caution" />
		</form>
	</div>
</div>

